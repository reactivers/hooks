{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": false,
    "target": "es5",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/dist",
    "**/*.md",
    "**/rollup.config.js"
  ]
}